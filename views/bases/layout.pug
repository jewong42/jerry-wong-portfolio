html
  head
    include ../includes/head.pug
  body(class="container-fluid" data-spy="scroll" data-target="#nav" data-offset="50")
    div(class="row h-100")
      div(class="col-md-2 h-100 position-fixed shadow")
          include ../includes/navigation.pug
      div(class="col-md-10 h-100 offset-2")
        block content

script.
  $("#nav a").on("click", function(event) {
    if (this.hash !== "") {
      event.preventDefault();
      var hash = this.hash;
      $("html, body").animate({
        scrollTop: $(hash).offset().top
      }, 800, function(){
        window.location.hash = hash;
      });
    }
  });

  $("#project_modal").on("show.bs.modal", function (event) {
    var project = $(event.relatedTarget).data("project");
    $('#name').text(project.name);
    $('#role').text(project.role);
    $('#tech').text(project.tech);
    $('#language').text(project.language);
    $('#description').text(project.description_long);
    $('#images').html("");
    for (index in project.images) {
      path = project.image_source + project.images[index];
      if (index < project.images.length - 1) $('#images').prepend("<div class='carousel-item'><img class='d-block w-100' src=" + path + "></div>");
      else $('#images').prepend("<div class='carousel-item active'><img class='d-block w-100' src=" + path + "></div>");
    };
  })

