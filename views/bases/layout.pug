html
  head
    include ../includes/head.pug
  body(class="container-fluid" data-spy="scroll" data-target="#nav" data-offset="50")
    div(class="row h-100")
      div(class="col-md-2 h-100 position-fixed shadow")
          include ../includes/navigation.pug
      div(class="col-md-10 h-100 offset-2")
        block content

script.
  $("#nav a").on("click", function(event) {
    if (this.hash !== "") {
      event.preventDefault();
      var hash = this.hash;
      $("html, body").animate({
        scrollTop: $(hash).offset().top
      }, 800, function(){
        window.location.hash = hash;
      });
    }
  });

  $("#project_modal").on("show.bs.modal", function (event) {
    var button = $(event.relatedTarget);
    var name, element;
    $(button[0].attributes).each(function() {
      if (this.nodeName.includes("data")) {
        name = this.nodeName.slice(5);
        element = "#" + name;
        $(element).text(button.data(name));
      } 
    });
  })

